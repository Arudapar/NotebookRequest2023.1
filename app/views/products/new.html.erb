<h1> Novo Produto </h1>

<%= form_with model: @product do |form| %>
    <div>
        
        <%= form.label :name %>
        <%= form.text_field :name %>
        <% @product.errors.full_messages_for(:name).each do |message| %>
            <div><%= message %></div>
        <% end %>

    </div>

    <div>
        <%= form.label :model %>
        <%= form.text_field :model %>
        <%= @product.errors.full_messages_for(:model).each do |message| %>
            <div><%= message %></div>
        <% end %>

    </div>

    <div>
        <%= form.label :serial %>
        <%= form.text_field :serial %>
        <%= @product.errors.full_messages_for(:serial).each do |message| %>
            <div><%= message %></div>
        <% end %>
        
    </div>

    <div>
        <%= form.submit %>
    </div>

<% end %>

